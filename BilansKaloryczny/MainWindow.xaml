<Window x:Class="BilansKaloryczny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bilans Kaloryczny"
        Height="620"
        Width="1060"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek górny -->
        <Border Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="Witaj, "/>
                        <Run Text="{Binding CurrentUser.FirstName, Mode=OneWay}"/>
                        <Run Text="!"/>
                    </TextBlock>

                    <TextBlock Opacity="0.75">
                        <Run Text="Wybrany dzień: "/>
                        <Run Text="{Binding SelectedDate, Mode=OneWay, StringFormat={}{0:yyyy-MM-dd}}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Opacity="0.75" VerticalAlignment="Center" Text="Data:" Margin="0,0,8,0"/>
                    <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Width="140"/>

                    <TextBlock Margin="16,0,0,0" Opacity="0.75" VerticalAlignment="Center">
                        <Run Text="Cel: "/>
                        <Run Text="{Binding CurrentUser.DailyCaloriesGoal, Mode=OneWay}"/>
                        <Run Text=" kcal"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zakładki -->
        <TabControl Grid.Row="1" Margin="0,12,0,0">

            <!-- DASHBOARD (podgląd) -->
            <TabItem Header="Dashboard">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Columns="4" Margin="0,0,0,12">
                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Zjedzone"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesConsumed, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Spalone"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesBurned, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Bilans (netto)"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding NetBalance, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Pozostało do celu"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesRemainingToGoal, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Border Grid.Row="1" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Opacity="0.75" Text="Postęp celu dziennego"/>
                            <ProgressBar Height="18"
                                         Minimum="0"
                                         Maximum="{Binding CurrentUser.DailyCaloriesGoal, Mode=OneWay}"
                                         Value="{Binding CaloriesConsumed, Mode=OneWay}"
                                         Margin="0,6,0,0"/>
                            <TextBlock Margin="0,6,0,0" Opacity="0.75"
                                       Text="{Binding GoalProgressText, Mode=OneWay}"/>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Posiłki (podgląd) -->
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Posiłki (dziś)" />
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding Meals}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      Margin="0,8,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="140"/>
                                    <DataGridTextColumn Header="Kcal" Binding="{Binding TotalCalories}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>

                        <!-- Aktywności (podgląd) -->
                        <DockPanel Grid.Column="2">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Aktywności (dziś)" />
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding Activities}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      Margin="0,8,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Czas (min)" Binding="{Binding DurationMin}" Width="90"/>
                                    <DataGridTextColumn Header="Spalone" Binding="{Binding BurnedCalories}" Width="90"/>
                                    <DataGridTextColumn Header="Intens." Binding="{Binding Intensity}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- POSIŁKI (edycja w RowDetails) -->
            <TabItem Header="Posiłki">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Height="32"
                                Padding="12,0"
                                Command="{Binding AddMealCommand}"
                                Content="Dodaj posiłek"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              x:Name="MealsGrid"
                              ItemsSource="{Binding Meals}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,10,0,0"
                              SelectedItem="{Binding SelectedMeal, Mode=TwoWay}"
                              RowDetailsVisibilityMode="Collapsed">

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="8" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Nazwa:"/>
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Text="Kategoria:"/>
                                        <ComboBox Grid.Row="0" Grid.Column="4"
                                                  ItemsSource="{Binding DataContext.MealCategories, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Kalorie:"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                                                 Text="{Binding TotalCalories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Data/czas:"/>
                                        <TextBox Grid.Row="1" Grid.Column="4" Margin="0,8,0,0"
                                                 Text="{Binding DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button Padding="10,4" Margin="0,0,8,0"
                                                    Click="SaveRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Zapisz
                                            </Button>
                                            <Button Padding="10,4"
                                                    Click="CancelRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Anuluj
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="140"/>
                            <DataGridTextColumn Header="Data/czas" Binding="{Binding DateTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="160"/>
                            <DataGridTextColumn Header="Kcal" Binding="{Binding TotalCalories}" Width="80"/>

                            <DataGridTemplateColumn Header="Akcje" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Padding="10,2" Margin="0,0,8,0"
                                                    Click="EditRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Edytuj
                                            </Button>

                                            <Button Padding="10,2"
                                                    Command="{Binding DataContext.DeleteMealCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                Usuń
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- AKTYWNOŚCI (edycja w RowDetails) -->
            <TabItem Header="Aktywności">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Height="32"
                                Padding="12,0"
                                Command="{Binding AddActivityCommand}"
                                Content="Dodaj aktywność"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              x:Name="ActivitiesGrid"
                              ItemsSource="{Binding Activities}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,10,0,0"
                              SelectedItem="{Binding SelectedActivity, Mode=TwoWay}"
                              RowDetailsVisibilityMode="Collapsed">

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="8" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Nazwa:"/>
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Text="Intensywność:"/>
                                        <ComboBox Grid.Row="0" Grid.Column="4"
                                                  ItemsSource="{Binding DataContext.Intensities, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding Intensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Czas (min):"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                                                 Text="{Binding DurationMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Spalone:"/>
                                        <TextBox Grid.Row="1" Grid.Column="4" Margin="0,8,0,0"
                                                 Text="{Binding BurnedCalories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button Padding="10,4" Margin="0,0,8,0"
                                                    Click="SaveRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Zapisz
                                            </Button>
                                            <Button Padding="10,4"
                                                    Click="CancelRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Anuluj
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Czas (min)" Binding="{Binding DurationMin}" Width="90"/>
                            <DataGridTextColumn Header="Spalone" Binding="{Binding BurnedCalories}" Width="90"/>
                            <DataGridTextColumn Header="Intens." Binding="{Binding Intensity}" Width="100"/>

                            <DataGridTemplateColumn Header="Akcje" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Padding="10,2" Margin="0,0,8,0"
                                                    Click="EditRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Edytuj
                                            </Button>

                                            <Button Padding="10,2"
                                                    Command="{Binding DataContext.DeleteActivityCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                Usuń
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Statystyki">
                <Grid Margin="12">
                    <TextBlock Opacity="0.75"
                               Text="Tu docelowo będą wykresy trendów (np. 7/14/30 dni): kalorie, bilans, makro."/>
                </Grid>
            </TabItem>

            <TabItem Header="Ustawienia">
                <Grid Margin="12">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Text="Ustawienia użytkownika"/>
                        <TextBlock Margin="0,8,0,0" Opacity="0.75"
                                   Text="Tu docelowo: limit kalorii i cele makro (procenty), dane profilu."/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
