<Window x:Class="BilansKaloryczny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bilans Kaloryczny"
        Height="620"
        Width="1060"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="Witaj, "/>
                        <Run Text="{Binding CurrentUser.FirstName, Mode=OneWay}"/>
                        <Run Text="!"/>
                    </TextBlock>

                    <TextBlock Opacity="0.75">
                        <Run Text="Wybrany dzień: "/>
                        <Run Text="{Binding SelectedDate, Mode=OneWay, StringFormat={}{0:yyyy-MM-dd}}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Opacity="0.75" VerticalAlignment="Center" Text="Data:" Margin="0,0,8,0"/>
                    <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Width="140"/>

                    <TextBlock Margin="16,0,0,0" Opacity="0.75" VerticalAlignment="Center">
                        <Run Text="Cel: "/>
                        <Run Text="{Binding CurrentUser.DailyCaloriesGoal, Mode=OneWay}"/>
                        <Run Text=" kcal"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Margin="0,12,0,0">

            <TabItem Header="Dashboard">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Columns="4" Margin="0,0,0,12">
                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Zjedzone"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesConsumed, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Spalone"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesBurned, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Bilans (netto)"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding NetBalance, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Pozostało do celu"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{Binding CaloriesRemainingToGoal, Mode=OneWay}"/>
                                    <Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Border Grid.Row="1" Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Opacity="0.75" Text="Postęp celu dziennego"/>
                            <ProgressBar Height="18"
                                         Minimum="0"
                                         Maximum="{Binding CurrentUser.DailyCaloriesGoal, Mode=OneWay}"
                                         Value="{Binding CaloriesConsumed, Mode=OneWay}"
                                         Margin="0,6,0,0"/>
                            <TextBlock Margin="0,6,0,0" Opacity="0.75"
                                       Text="{Binding GoalProgressText, Mode=OneWay}"/>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Posiłki (dziś)" />
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding MealsView}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      Margin="0,8,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="140"/>
                                    <DataGridTextColumn Header="Kcal" Binding="{Binding TotalCalories}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>

                        <DockPanel Grid.Column="2">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Aktywności (dziś)" />
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding ActivitiesView}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      Margin="0,8,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Czas (min)" Binding="{Binding DurationMin}" Width="90"/>
                                    <DataGridTextColumn Header="Spalone" Binding="{Binding BurnedCalories}" Width="90"/>
                                    <DataGridTextColumn Header="Intens." Binding="{Binding Intensity}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Posiłki">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Height="32"
                                Padding="12,0"
                                Command="{Binding AddMealCommand}"
                                Content="Dodaj posiłek"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              x:Name="MealsGrid"
                              ItemsSource="{Binding MealsView}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,10,0,0"
                              SelectedItem="{Binding SelectedMeal, Mode=TwoWay}"
                              RowDetailsVisibilityMode="Collapsed">

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="8" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Nazwa:"/>
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Text="Kategoria:"/>
                                        <ComboBox Grid.Row="0" Grid.Column="4"
                                                  ItemsSource="{Binding DataContext.MealCategories, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Kalorie:"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                                                 Text="{Binding TotalCalories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Data/czas:"/>
                                        <TextBox Grid.Row="1" Grid.Column="4" Margin="0,8,0,0"
                                                 Text="{Binding DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button Padding="10,4" Margin="0,0,8,0"
                                                    Click="SaveRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Zapisz
                                            </Button>
                                            <Button Padding="10,4"
                                                    Click="CancelRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Anuluj
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="140"/>
                            <DataGridTextColumn Header="Data/czas" Binding="{Binding DateTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="160"/>
                            <DataGridTextColumn Header="Kcal" Binding="{Binding TotalCalories}" Width="80"/>

                            <DataGridTemplateColumn Header="Akcje" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Padding="10,2" Margin="0,0,8,0"
                                                    Click="EditRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Edytuj
                                            </Button>

                                            <Button Padding="10,2"
                                                    Command="{Binding DataContext.DeleteMealCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                Usuń
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Aktywności">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Height="32"
                                Padding="12,0"
                                Command="{Binding AddActivityCommand}"
                                Content="Dodaj aktywność"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              x:Name="ActivitiesGrid"
                              ItemsSource="{Binding ActivitiesView}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,10,0,0"
                              SelectedItem="{Binding SelectedActivity, Mode=TwoWay}"
                              RowDetailsVisibilityMode="Collapsed">

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="8" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Nazwa:"/>
                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Text="Intensywność:"/>
                                        <ComboBox Grid.Row="0" Grid.Column="4"
                                                  ItemsSource="{Binding DataContext.Intensities, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding Intensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Czas (min):"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                                                 Text="{Binding DurationMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Spalone:"/>
                                        <TextBox Grid.Row="1" Grid.Column="4" Margin="0,8,0,0"
                                                 Text="{Binding BurnedCalories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button Padding="10,4" Margin="0,0,8,0"
                                                    Click="SaveRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Zapisz
                                            </Button>
                                            <Button Padding="10,4"
                                                    Click="CancelRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Anuluj
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Czas (min)" Binding="{Binding DurationMin}" Width="90"/>
                            <DataGridTextColumn Header="Spalone" Binding="{Binding BurnedCalories}" Width="90"/>
                            <DataGridTextColumn Header="Intens." Binding="{Binding Intensity}" Width="100"/>

                            <DataGridTemplateColumn Header="Akcje" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Padding="10,2" Margin="0,0,8,0"
                                                    Click="EditRow_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                Edytuj
                                            </Button>

                                            <Button Padding="10,2"
                                                    Command="{Binding DataContext.DeleteActivityCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                Usuń
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Statystyki">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Opacity="0.75" VerticalAlignment="Center" Text="Zakres:" Margin="0,0,8,0"/>
                        <ComboBox Width="120"
                      ItemsSource="{Binding StatsRanges}"
                      SelectedItem="{Binding SelectedStatsRange, Mode=TwoWay}"/>
                        <TextBlock Opacity="0.75" VerticalAlignment="Center" Text="dni" Margin="8,0,0,0"/>
                    </StackPanel>

                    <UniformGrid Grid.Row="1" Columns="4" Margin="0,12,0,12">
                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Suma zjedzone"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="{Binding StatsTotalConsumed, Mode=OneWay}"/><Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Suma spalone"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="{Binding StatsTotalBurned, Mode=OneWay}"/><Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Margin="0,0,12,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Bilans łącznie"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="{Binding StatsTotalNet, Mode=OneWay}"/><Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Opacity="0.75" Text="Śr. bilans / dzień"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold">
                        <Run Text="{Binding StatsAvgNet,Mode=OneWay, StringFormat={}{0:0}}"/><Run Text=" kcal"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <DataGrid Grid.Row="2"
                  ItemsSource="{Binding StatsDays}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                            <DataGridTextColumn Header="Zjedzone" Binding="{Binding Consumed}" Width="110"/>
                            <DataGridTextColumn Header="Spalone" Binding="{Binding Burned}" Width="110"/>
                            <DataGridTextColumn Header="Bilans" Binding="{Binding Net}" Width="110"/>
                            <DataGridTextColumn Header="Posiłki" Binding="{Binding MealsCount}" Width="90"/>
                            <DataGridTextColumn Header="Aktywności" Binding="{Binding ActivitiesCount}" Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Ustawienia">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Ustawienia użytkownika"/>

                    <Border Grid.Row="1" Padding="12" Margin="0,10,0,0" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Imię:"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding SettingsFirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Text="Wiek:"/>
                            <TextBox Grid.Row="0" Grid.Column="4"
                         Text="{Binding SettingsAge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Wzrost (cm):"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                         Text="{Binding SettingsHeightCm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="1" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Waga (kg):"/>
                            <TextBox Grid.Row="1" Grid.Column="4" Margin="0,8,0,0"
                         Text="{Binding SettingsWeightKg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Płeć:"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,8,0,0"
                          ItemsSource="{Binding Genders}"
                          SelectedItem="{Binding SettingsGender, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="2" Grid.Column="3" Margin="0,8,0,0" VerticalAlignment="Center" Text="Aktywność:"/>
                            <ComboBox Grid.Row="2" Grid.Column="4" Margin="0,8,0,0"
                          ItemsSource="{Binding ActivityLevels}"
                          SelectedItem="{Binding SettingsActivityLevel, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Cel kcal / dzień:"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,8,0,0"
                         Text="{Binding SettingsDailyCaloriesGoal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,8,0,0" VerticalAlignment="Center" Text="Makro cele (g):"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,8,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="B:" Margin="0,0,6,0"/>
                                <TextBox Width="60" Text="{Binding SettingsProteinPercentGoal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text=" T:" Margin="12,0,6,0"/>
                                <TextBox Width="60" Text="{Binding SettingsFatPercentGoal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text=" W:" Margin="12,0,6,0"/>
                                <TextBox Width="60" Text="{Binding SettingsCarbsPercentGoal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="6" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                <Button Padding="12,6" Margin="0,0,8,0"
                            Command="{Binding ResetSettingsCommand}"
                            Content="Przywróć"/>
                                <Button Padding="12,6"
                            Command="{Binding ApplySettingsCommand}"
                            Content="Zapisz"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
